<div class="single_review">
  <tr>
    <td><%= review.description %></td>
    <td><%= review.rating %>/5 </td>
    <td><%= review.created_at %> </td>
    <td class="review_delete">
      <% if is_same_user?(session, review)%>
        <div class="review_button"> <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" }%> </div>
      <% else %>
        <div class="review_button"> <%= link_to fa_icon('trash'), [@product], class: 'btn btn-sm btn-danger', disabled: :true %> </div>
      <% end %>
    </td>
  </tr>
</div>

